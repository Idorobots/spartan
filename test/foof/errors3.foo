(letrec ((foo (lambda (c)
                (display "Counter: ")
                (display c)
                (newline)
                (foo (raise-error c)))))
  (call/handler (lambda (e r)
                  (task-info)
                  (sleep 1000)
                  (when (< e 10)
                    (r (+ 1 e))))
                (lambda ()
                  (foo 1))))
