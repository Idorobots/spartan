(letrec ((foo (lambda (c)
                (display "Counter: ")
                (display c)
                (newline)
                (foo (raise c)))))
  ;; NOTE Spawned processes do not inherit the error handler.
  (handle (do (spawn (lambda () (foo 1)))
              (spawn (lambda () (foo 1)))
              (spawn (lambda () (foo 1))))
          (lambda (e r)
            (task-info)
            (sleep 1000)
            (when (< e 10)
              (r (+ 1 e))))))
