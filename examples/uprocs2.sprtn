(letrec ((times (lambda (count text)
                  (unless (= count 0)
                    (display text) (newline)
                    (sleep 100)
                    (times (- count 1) text)))))
  (spawn (lambda () (times 10 "Lorem")))
  (spawn (lambda () (times 10 "ipsum")))
  (spawn (lambda () (times 10 "dolor")))
  (spawn (lambda () (times 10 "sit")))
  (spawn (lambda () (times 10 "amet!")))
  (monitor 500))
